<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/logomargin"
    android:layout_marginTop="@dimen/margin_size">
    <TextView
        android:id="@+id/tvLike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/like"
        android:textColor="@color/colorme"
        android:textSize="@dimen/textSize2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/logomargin"
        android:layout_marginTop="@dimen/margin_size"
        >
        <ImageButton
            android:id="@+id/imageFacebook"
            android:layout_weight="1"
            android:focusable="true"
            android:layout_width="@dimen/weight"
            android:layout_height="@dimen/logodimen"
            android:background="@drawable/facebook"/>
        <ImageButton
            android:id="@+id/imageTwitter"
            android:layout_weight="1"
            android:layout_width="@dimen/weight"
            android:focusable="true"
            android:layout_height="@dimen/logodimen"
            android:background="@drawable/twitter"
            android:layout_marginLeft="@dimen/padding"/>
        <ImageButton
            android:id="@+id/imageGooglePlus"
            android:layout_weight="1"
            android:layout_width="@dimen/weight"
            android:focusable="true"
            android:layout_height="@dimen/logodimen"
            android:layout_marginLeft="@dimen/padding"
            android:background="@drawable/googleplus"/>

    </LinearLayout>
</LinearLayout>